<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView 
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewThumb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            card_view:layout_constraintLeft_toRightOf="@+id/imageViewThumb"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />



        <ImageView
            android:id="@+id/star1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/star_nutral"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/name"
            card_view:layout_constraintLeft_toRightOf="@+id/imageViewThumb"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
        <ImageView
            android:id="@+id/star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/star_nutral"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/name"
            card_view:layout_constraintLeft_toRightOf="@+id/star1"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
        <ImageView
            android:id="@+id/star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/star_nutral"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/name"
            card_view:layout_constraintLeft_toRightOf="@+id/star2"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
        <ImageView
            android:id="@+id/star4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/star_nutral"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/name"
            card_view:layout_constraintLeft_toRightOf="@+id/star3"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
        <ImageView
            android:id="@+id/star5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/star_nutral"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/name"
            card_view:layout_constraintLeft_toRightOf="@+id/star4"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            card_view:layout_constraintLeft_toRightOf="@+id/imageViewThumb"
            card_view:layout_constraintTop_toBottomOf="@+id/star1"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="TextView"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/star5"
            card_view:layout_constraintTop_toBottomOf="@+id/name" />
    </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

